<h1>EAT-DA-BURGER!</h1>

<form class="container create-form">

	<label for="newBurger">New Burger</label>
	<div>
		<input class="burger-input" type="text" id="newBurger" name="burger_name">
	</div>
	<button class="add-a-burger btn btn-primary btn-lg" type="submit">Add A Burger</button>
</form>

<div class="container">
	<p>Burgers:</p>
	<br>
	<br>

	<ul>
		{{#each burgers}} {{#unless devoured}} {{> burgers/burgers-block eaten = true}} {{/unless}} {{/each}}
	</ul>

	</ul>
</div>

<div class="container">
	<p>Devoured Burgers:</p>
	<br>
	<br>
	<ul>
		{{#each burgers}}
		<div>
			{{#if devoured }}
			<li class="burgers-before">
				<span class="burger-before">
					{{burger_name}}
				</span>
			</li>
			{{/if}} {{/each}}
		</div>

	</ul>
</div>