<h1>EAT-DA-BURGER!</h1>

<form class="container jumbotron create-form">
	<div>
		<label for="newBurger">New Burger</label>
		<input type="text" id="newBurger" name="burger_name">
	</div>
	<button class="add-a-burger btn btn-primary btn-lg"type="submit">Add A Burger</button>
</form>

<div class="container jumbotron">
	Burgers:
	<br> 
	<br>
	<ul>
		{{#each burgers}}
			{{#unless devoured}}
			{{> burgers/burgers-block eaten = true}}
			{{/unless}}
		{{/each}}
	</ul>
	
</ul>
</div>

<div class="container jumbotron">
Devoured Burgers:
<br> 
	<br>
	<ul>
	  {{#each burgers}}
		{{#if devoured }}
		<li>
			{{burger_name}}
		</li>
		{{/if}}	
		{{/each}}
	</ul>
</div>




